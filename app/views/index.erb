<div id="nav">

  <% if logged_in? %>
    <header><a id="logout" href="/logout">Sign out</a></header>
    <h1>Welcome <%= current_user_name %></h1>
  <% else %>
    <header>
      <a id="register" href="/register">Sign up</a>
      <a id="login" href="/login">Sign in</a>
      <h1>Welcome!</h1>
    </header>

    <% if @user.errors.any? %>
      <div class="errors">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

</div> <!-- nav -->

<div id="form-wrapper" class="invisible">
  <form id="" method="post" action="">
    <input type="text" name="username" placeholder="username" required/>
    <input type="password" name="password" placeholder="password" minlength="5"/>
    <input type="submit" value="submit"/>
  </form>
</div>
